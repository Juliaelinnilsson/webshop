<%- include("../partial/adminheader.ejs") %>






<!-- main-->
<div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5" id="centercontainer">
        <div class="row" id="contentform">
            <div class="col-12">
                <h1>EDIT PRODUCT</h1>
                <form action="/admin/addproduct" method="POST">
                    <div class="row row_admin">
                        <div class="col-12">
                            <div class="input-group">
                                <select class="inputdropdown" id="sel1" name="country" placeholder="Select country">
                                    <option value="Sri Lanka">SRI</option>
                                    <option value="Portugal">PRO</option>
                                    <option value="Costa Rica">COS</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                            <input type="text" name="_id" value="" hidden>
                            <input class="form-control inputlong_admp" placeholder="Title" id="title" name="title"
                                value="<%=response.title%>">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                            <input class="form-control inputlong_admp" type="text" placeholder="Description"
                                id="description" name="description" value="<%=response.description%>">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-6">
                            <input class="form-control inputshort_admp" placeholder="Price" id="price" name="price"
                                value="<%=response.price%>">
                        </div>
                        <div class="col-6">
                            <input class="form-control inputshort_admp" placeholder="Quantity" id="quantity"
                                name="quantity" value="<%=response.quantity%>">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="custom-file col-sm-6">
                            <input type="file" class="custom-file-input inputshort_admp" id="customFile">
                            <label class="custom-file-label" for="customFile">UPLOAD IMAGE</label>
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                           <button class="buttonblue" type="submit">UPDATE</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- main-->
<%- include("../partial/adminfooter.ejs") %>
<%- include("../partial/adminheader.ejs") %>

<!-- main replica of Emmas editproduct -->







<div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5" id="centercontainer">
        <div class="row" id="contentform">
            <div class="col-12">
                <h3 class="title">ADD PRODUCT</h3>

                <form action="/admin/addproduct" method="POST">
                    <div class="row row_admin">
                        <div class="col-12">
                            <select class="inputdropdown" id="sel1" name="country" placeholder="Select country">
                                <option value="Sri Lanka">Sri Lanka</option>
                                <option value="Portugal">Portugal</option>
                                <option value="Costa Rica">Costa Rica</option>
                            </select>
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                            <input class="form-control inputlong_admp" placeholder="Title" name="title" id="title">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                            <input class="form-control inputlong_admp" type="text" name="description"
                                placeholder="Description" id="description">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-6">
                            <input class="form-control inputshort_admp" placeholder="Price" name="price" id="price">
                        </div>
                        <div class="col-6">
                            <input class="form-control inputshort_admp" placeholder="Quantity" name="quantity"
                                id="quantity">
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="select-weeks col-sm-6 ">
                            <h6>Amount of weeks</h6>
                            <input class="checkbox" type="checkbox" value="1" name="weekone" id="one">
                            <input class="checkbox" type="checkbox" value="2" name="weektwo" id="two">
                            <input class="checkbox" type="checkbox" value="3" name="weekthree" id="three">
                            <input class="checkbox" type="checkbox" value="4" name="weekfour" id="four">
                            <label class="week-label" for="one">1</label>
                            <label class="week-label" for="two">2</label>
                            <label class="week-label" for="three">3</label>
                            <label class="week-label" for="four">4</label>
                        </div>
                        <div class="custom-file col-sm-6">
                            <input type="file" class="custom-file-input inputshort_admp" name="image" id="customFile">
                            <label class="custom-file-label" for="customFile">UPLOAD IMAGE</label>
                        </div>
                    </div>
                    <div class="row row_admin">
                        <div class="col-12">
                            <button class="buttonblue" type="submit">Add</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
